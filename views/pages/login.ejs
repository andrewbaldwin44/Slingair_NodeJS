<%- include('../partials/head.ejs') -%>
<%- include('../partials/banner.ejs') -%>
<main class="login-page">
  <h1>Please login so we can find your flight</h1>
  <form class="login-form" id="login-form">
    <fieldset>
      <label for="user-email">Email : </label>
      <input type="email" id="user-email" class="user-email" name="user-email"/>
    </fieldset>
    <fieldset>
      <label for="user-password">Password : </label>
      <input type="password" name="user-password" class="user-password" id="user-password"/>
    </fieldset>
    <button type="submit" id="submit-user-info" class="button submit-user-info" name="submit-email">
      Login
    </button>
  </form>
</main>
<script src="/login/login.js"></script>
